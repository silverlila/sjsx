{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "sjsx",
    "paths": {
      "sjsx/*": ["./*"],
      "sjsx/jsx-runtime": ["./src/jsx-runtime"],
      "sjsx/components": ["./src/suspense"]
    }
  },
  "include": ["./src/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
}
