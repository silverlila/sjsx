{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "my-sjsx",
    "paths": {
      "my-sjsx/*": ["./*"],
      "my-sjsx/jsx-runtime": ["./src/jsx-runtime"]
    }
  },
  "include": ["./src/**/*", "examples/**/*", "server.tsx"],
  "exclude": ["node_modules", "dist"]
}
